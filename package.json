{
  "name": "alko-mcp",
  "version": "1.0.0",
  "description": "MCP server for querying Alko.fi alcohol product catalog",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "sync-data": "tsx scripts/sync-data.ts",
    "sync-stores": "tsx scripts/sync-stores.ts",
    "export-seed": "tsx scripts/export-seed-data.ts",
    "seed": "tsx scripts/seed-firestore.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "alko",
    "alcohol",
    "finland",
    "claude",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@google-cloud/firestore": "^8.0.0",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "lru-cache": "^11.0.0",
    "pino": "^10.1.0",
    "playwright": "^1.49.0",
    "xlsx": "^0.18.5",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^9.17.0",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
